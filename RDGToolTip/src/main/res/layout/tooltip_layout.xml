<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/tooltip_id"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/tooltip_arrow_size"
        android:background="@drawable/rectangle"
        android:orientation="vertical">

        <include
            android:id="@+id/tooltip_header"
            layout="@layout/tooltip_header_layout"
            android:visibility="gone" />

        <include layout="@layout/tooltip_body_layout" />

    </LinearLayout>


    <RelativeLayout
        android:id="@+id/arrow_up"
        android:layout_width="@dimen/tooltip_arrow_size"
        android:layout_height="@dimen/tooltip_arrow_size"
        android:layout_gravity="top|center_horizontal"
        android:layout_marginTop="@dimen/default_arrow_margin"
        android:background="@drawable/tooltip_arrow"
        android:orientation="vertical"
        android:visibility="visible" />

    <RelativeLayout
        android:id="@+id/arrow_left"
        android:layout_width="@dimen/tooltip_arrow_size"
        android:layout_height="@dimen/tooltip_arrow_size"
        android:layout_gravity="center_vertical|left"
        android:layout_marginLeft="@dimen/default_arrow_margin"
        android:background="@drawable/tooltip_arrow"
        android:orientation="vertical"
        android:rotation="270"
        android:visibility="visible" />

    <RelativeLayout
        android:id="@+id/arrow_right"
        android:layout_width="@dimen/tooltip_arrow_size"
        android:layout_height="@dimen/tooltip_arrow_size"
        android:layout_gravity="center_vertical|right"
        android:layout_marginRight="@dimen/default_arrow_margin"
        android:background="@drawable/tooltip_arrow"
        android:orientation="vertical"
        android:rotation="90"
        android:visibility="visible" />

    <RelativeLayout
        android:id="@+id/arrow_down"
        android:layout_width="@dimen/tooltip_arrow_size"
        android:layout_height="@dimen/tooltip_arrow_size"
        android:layout_gravity="center_horizontal|bottom"
        android:layout_marginBottom="@dimen/default_arrow_margin"
        android:background="@drawable/tooltip_arrow"
        android:orientation="vertical"
        android:rotation="180"
        android:visibility="visible" />

</FrameLayout>